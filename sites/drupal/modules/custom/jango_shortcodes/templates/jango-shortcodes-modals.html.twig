<div class="modal fade {{ modal_class }}" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog {{ modal_d }}">
    <div class="modal-content c-square">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">{{ label }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ text|raw }}</p>
      </div>
      <div class="modal-footer">
        <a class="btn {{ footer_color }} c-btn-square c-btn-bold c-btn-uppercase" href="{{ link }}">
          {% if link_label != FALSE %}
            {{ link_label }}
          {% else %}
            {{ 'Visit Website'|t }}
          {% endif %}
        </a>
        <button type="button" class="btn {{ footer_color }} c-btn-square c-btn-border-2x c-btn-square c-btn-bold c-btn-uppercase" data-dismiss="modal">{{ 'Close'|t }}</button>
      </div>
    </div>
  </div>
</div>
